<h1>Edit post</h1>

<form method="POST">
  <div class="post">
    <div class="header">
      <div class="author">
        <strong>Author:</strong> {{post.user.username}}
      </div>
      <div class="date">
        <strong>Posted: </strong> {{formatDate createdAt}}
      </div>
    </div>

    <div class="form-group">
      <textarea class="form-control" name="post">{{post.body}}</textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-success">Save</button>
      <a href="/" class="btn btn-danger">Cancel</a>
    </div>
  </div>
</form>
